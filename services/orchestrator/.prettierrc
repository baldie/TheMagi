{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.py",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.md", "*.markdown"],
      "options": {
        "proseWrap": "always"
      }
    }
  ]
} 